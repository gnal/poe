<div id="results">
    {% if items|length %}
    <table class="table table-bordered">
        <tr>
            <th>Item</th>
            {#<th>Req</th>#}
            <th><abbr title="Dmg per Second">DPS</abbr></th>
            <th><abbr title="Avg Physical Dmg">APD</abbr></th>
            <th><abbr title="Avg Elemental Dmg">AED</abbr></th>
            <th>Armour</th>
            <th><abbr title="Evasion Rating">ER</abbr></th>
            <th><abbr title="Energy Shield">ES</abbr></th>
        </tr>
    {% for item in items %}
        <tr>
            <td>
                <a class="item text-frame-type-{{ item.frameType }}" target="_blank" href="http://www.pathofexile.com/forum/view-thread/{{ item.threadId }}">
                    {{ item.name }}
                </a>
                {#<small>{{ item.name ? item.type : item.type.parent }}</small>#}
                {#<br>
                <small>
                    Req:
                    {% if item.lvlReq %}<span class="muted">Lvl: {{ item.lvlReq }}</span>{% endif %}
                    {% if item.strReq %}<span class="text-error">Str: {{ item.strReq }}</span>{% endif %}
                    {% if item.dexReq %}<span class="text-success">Dex: {{ item.dexReq }}</span>{% endif %}
                    {% if item.intReq %}<span class="text-info">Int: {{ item.intReq }}</span>{% endif %}
                </small>#}
            </td>
            {#<td>
                <small>
                    {% if item.lvlReq %}<span class="muted">Lvl: {{ item.lvlReq }}</span>{% endif %}
                    {% if item.strReq %}<span class="text-error">Str: {{ item.strReq }}</span>{% endif %}
                    {% if item.dexReq %}<span class="text-success">Dex: {{ item.dexReq }}</span>{% endif %}
                    {% if item.intReq %}<span class="text-info">Int: {{ item.intReq }}</span>{% endif %}
                </small>
            </td>#}
            <td>{{ item.dps|number_format }}</td>
            <td>
                {% if item.averagePhysicalDamage %}
                    <small class="muted">{{ item.averagePhysicalDamage|number_format }}</small>
                {% endif %}
            </td>
            <td>
                {#<small class="text-error">{{ item.calcAverageElementalDamage|number_format }}</small>#}
                {% if item.averageFireDamage %}
                    <small class="text-error">{{ item.averageFireDamage|number_format }}</small>
                    <small class="muted">{% if item.minColdDamage or item.minLightningDamage %}+{% endif %}</small>
                {% endif %}
                {% if item.averageColdDamage %}
                    <small class="text-info">{{ item.averageColdDamage|number_format }}</small>
                    <small class="muted">{% if item.minLightningDamage %}+{% endif %}</small>
                {% endif %}
                {% if item.averageLightningDamage %}
                    <small class="text-warning">{{ item.averageLightningDamage|number_format }}</small>
                {% endif %}
            </td>
            <td>{{ item.armour }}</td>
            <td>{{ item.evasionRating }}</td>
            <td>{{ item.energyShield }}</td>
            {#<td>{{ item.id }}</td>
            <td>{{ item.type.parent }} {{ item.type }}</td>#}
        </tr>
    {% endfor %}
    </table>
    {% else %}
    Nothing was found.
    {% endif %}
</div>
